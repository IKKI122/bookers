<!DOCTYPE html>
<html>
<head>
    <title>WebCampBackendNew</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="app/assets/stylesheets/application.css">
</head>
<body>
<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
    <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
    </div>
    
    <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
    </div>
    
    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>

<a>
    <%= link_to "Show",book_path(@book.id) %>
</a> 
|
<a>
    <%= link_to "Back",books_path(@book.id) %>
</a>
</body>
</html>